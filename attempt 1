#include <iostream>
using namespace std;
int main()
{
    //declare identifier
    int Num_Person, categories, Continue;
    float Ticket_Cost, Total_payment,cat1,cat2=0 ,cat3=0 ,cat4=0 ;
    cout<<"WELCOME TO SNOWALK INDOOR I-CITY THEME PARK ENTRANCE"<<endl;
    //loop for key in more person 
    do{
        cout<<"Please select the categories \n1) CHILD : 11 YEARS OLD AND BELOW \n2) TEEN : 12 TO 17 YEARS OLD \n3) ADULT : 18 TO 60 YEARS OLD \n4) TEEN : 61 YEARS OLD AND ABOVE"<<endl<<endl;
        cout<<"categories : ";
        cin >> categories;
        
        //selection of categories and process
        if (categories == 1){
            cout<<"Please enter the number of child : ";
            cin>>Num_Person;
            // for desplay output of free charge
            cat1 = 1;
        }
        else if (categories == 2){
            cout<<"Please enter the number of Teen : ";
            cin>>Num_Person;
            cat2 = Num_Person * 60.0;
            if(Num_Person >= 5){
                cat2 *= 0.9;
            }
        }
        else if (categories == 3){
            cout<<"Please enter the number of Adult : ";
            cin>>Num_Person;
            cat3 = Num_Person * 70.0;
            if(Num_Person >= 3){
                cat3 *= 0.95;
            }
        }
        else if (categories == 4){
            cout<<"Please enter the number of Senior : ";
            cin>>Num_Person;
            cat4 = Num_Person * 56.0;
            if(Num_Person >= 3){
                cat4 *= 0.95;
            }
        }
        else {
            cout << "Invalid category selected. Please try again." << endl;
            continue; // Skips the current iteration if invalid category is selected
        }
        // asking user about continue to add more tickets or not
        cout<<"Are you want to add more person if yes type (1) , NO (2) : ";
        cin >> Continue;
        cout<<endl;
    }while(Continue == 1);
    // display the total fee each category
    if (cat1 == 1){
        cout<<"your child ticket are free"<<endl;
    }
    cout << "Your Teen fee tiket is Rm "<< cat2<<endl;
    cout << "Your Adult fee tiket is Rm "<<cat3<<endl;
    cout << "Your Senior fee tiket is Rm "<<cat4<<endl<<endl;
    //sum all the fee of ticket
    Total_payment=cat1+cat2+cat3+cat4;
    cout << "Your Total fee tiket is Rm "<<Total_payment<<endl;
return 0;
}
